{
  "name": "@toronto-blog/core",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "predev": "yarn workspace @toronto-blog/utils build",
    "dev": "lerna run --parallel dev",
    "start": "node packages/server/build/server.js",
    "start:production": "NODE_ENV=production MONGO_DB=toronto-blog yarn start",
    "start:testing": "NODE_ENV=testing MONGO_DB=toronto-blog-test yarn start",
    "build": "lerna run build",
    "precy:open": "yarn workspace @toronto-blog/server build",
    "cy:open:internal": "cypress open",
    "cy:open": "MONGO_DB=toronto-blog-test start-server-and-test dev 5001 cy:open:internal",
    "precy:run": "yarn workspace @toronto-blog/server build",
    "cy:run:internal": "cypress run",
    "cy:run": "MONGO_DB=toronto-blog-test start-server-and-test dev 5001 cy:run:internal"
  },
  "dependencies": {
    "cypress": "^4.0.0",
    "lerna": "^3.20.2",
    "start-server-and-test": "^1.10.8"
  }
}
