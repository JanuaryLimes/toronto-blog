{
  "name": "toronto-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:css && react-scripts build",
    "build-server": "babel src/server -d dist",
    "build-utils": "cd packages/toronto-utils && npm run build",
    "build:css": "postcss src/client/style/tailwind/index.tailwind.css -o src/client/style/tailwind/index.css",
    "eject": "react-scripts eject",
    "heroku-postbuild": "npm run build",
    "start": "npm run build-server && node dist/server.js",
    "start-dev": "npm run start-dev-react & npm run start-dev-server",
    "start-dev-react": "npm run update-utils && (npm run watch:css & react-scripts start)",
    "start-dev-server": "nodemon --inspect=9230 --exec babel-node src/server/server.js",
    "test": "react-scripts test",
    "update-utils": "npm run build-utils && yarn upgrade ./packages/toronto-utils",
    "watch:css": "postcss src/client/style/tailwind/index.tailwind.css -o src/client/style/tailwind/index.css -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "rm -r ./packages/toronto-utils/lib/ && npm run build-utils"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-var": 1,
      "prefer-const": 1
    }
  },
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/runtime": "^7.6.2",
    "@tippy.js/react": "^3.0.0",
    "autoprefixer": "^9.7.1",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "framer-motion": "^1.6.15",
    "husky": "^3.0.7",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.7.3",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "postcss-cli": "^6.1.3",
    "react": "^16.10.1",
    "react-cookie": "^4.0.1",
    "react-dom": "^16.10.1",
    "react-markdown": "^4.2.2",
    "react-mde": "^7.6.2",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.1.2",
    "react-sticky": "^6.0.3",
    "redux": "^4.0.4",
    "redux-starter-kit": "^0.7.0",
    "resize-observer-polyfill": "^1.5.1",
    "secure-random": "^1.1.2",
    "selectorator": "^4.0.3",
    "tailwindcss": "^1.1.2",
    "toronto-utils": "./packages/toronto-utils",
    "typescript": "^3.6.3",
    "uuid": "^3.3.3"
  },
  "proxy": "http://localhost:5000/"
}
